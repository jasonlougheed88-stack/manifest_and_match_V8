        "performance_expectations": "aggressive"
      },
      "mid_range": {
        "memory_threshold_gb": 4,
        "cpu_cores_min": 4,
        "rollout_priority": "standard",
        "performance_expectations": "balanced"
      },
      "budget": {
        "memory_threshold_gb": 3,
        "cpu_cores_min": 2,
        "rollout_priority": "conservative",
        "performance_expectations": "stability_focused"
      }
    },
    "user_segments": {
      "power_users": {
        "session_frequency": "daily",
        "feature_adoption": "early",
        "performance_sensitivity": "high",
        "rollout_percentage": 20
      },
      "regular_users": {
        "session_frequency": "weekly",
        "feature_adoption": "standard",
        "performance_sensitivity": "medium",
        "rollout_percentage": 70
      },
      "casual_users": {
        "session_frequency": "monthly",
        "feature_adoption": "late",
        "performance_sensitivity": "low",
        "rollout_percentage": 10
      }
    }
